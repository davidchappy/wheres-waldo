<h1 class="heading">Where's Waldo</h1>

<%= image_tag(@source, id: "photo", 'data-id' => @photo.id) %>

<div class="popup">
  <h3>Who'd you find?</h3>
  <ul>
    <% @characters.each do |character| %>
      <li class="character-choice" id="<%= character.name %>"><%= character.name.capitalize! %></li>
    <% end %>
  </ul>
</div>